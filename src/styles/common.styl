body
    background #f0f0f0

.post
    margin 30px 0
    padding 10px 30px 20px
    background #fff
    box-shadow 0 3px 3px rgba(0, 0, 0, .1)

.post-text
    white-space pre-line

.post-controls
    font-size 16px
    transition opacity .3s

.post .post-controls
    opacity 0

.post:hover .post-controls
    opacity 1

.post-controls-item
    display inline-block
    color #aaa
    cursor pointer
    margin 0 3px

    &:hover
        color #000


.post-list
    padding 70px 0


.post-new
    margin 100px 0
    padding 30px 30px 15px
    background #fff
    box-shadow 0 3px 3px rgba(0, 0, 0, .1)


.post-details
    margin 100px 0
    padding 10px 30px 20px
    background #fff
    box-shadow 0 3px 3px rgba(0, 0, 0, .1)


.post-edit
    margin 100px 0
    padding 30px 30px 15px
    background #fff
    box-shadow 0 3px 3px rgba(0, 0, 0, .1)


.not-found
    margin 100px 0
    padding 100px 30px
    background #fff
    box-shadow 0 3px 3px rgba(0, 0, 0, .1)
    text-align center
